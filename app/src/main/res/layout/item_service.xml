<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/colorAccent"
    android:layout_marginTop="5dp">

    <EditText
        android:id="@+id/item_service_name_text_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/lightGray"
        android:textSize="15sp"
        android:gravity="center"
        android:hint="@string/name"/>

    <EditText
        android:id="@+id/item_service_price_text_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/item_service_name_text_view"
        android:hint="@string/price"
        android:textSize="30sp"
        android:gravity="center"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_service_delete_button"
        android:background="@drawable/ic_delete_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/item_service_save_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_refresh_24dp"
        android:layout_toStartOf="@id/item_service_delete_button"
        android:layout_centerVertical="true"/>


</RelativeLayout>